@CHARSET "UTF-8";
    html, body {
      height: 100%;
    }
    body {
      background-color: #fff;
      font-family: sans-serif;
      margin: 0;
    }
    #divTitre {
        height: 76px;
        vertical-align: middle;
        font-size: 25px;
    }
    #divLang { 
        position: absolute; 
        top: 10px;
        right: 10px;
    }
    #divToolboxMenu { 
        float: left; 
        left: 10px;
    }
    #divButtons {
        float: right;
        margin-right: 10px;
    }
    #ulTabpanel {
        clear: both;
        float: left;
        width: 15%;    
        padding-top: 10px;
    }
    #divTabpanel {
        float:left;  
        height:80%;
        width:85%;
        padding-top: 10px;
        padding-right: 10px;
    }
	#content_area, #content_blocks,  #content_term, #content_xml{
/* 	    float: right; */
	    height: 100%;
	    width: 100%;
	}
    #pre_arduino, #pre_xml {
      height: 85%;
      width:100%;
    }
    #divFooter {
        position: absolute;
        bottom: 5px;
    }
	.nav-tabs {
	    border-bottom: none  !important;
	}    
	.blocklySvg {
      border-top: none !important;
    }
      #debug_arduino{
      height: 5%;
      border-width:2px;
      border-color:black;
      background-color: rgba(8, 8, 8, 1);
      color : rgba(29, 147, 47, 1);
      overflow: auto;
      word-break: break-all;
      word-wrap: break-word;
      white-space: pre-wrap;
    }
    .blocklyToolboxDiv {
        background-color: #e9f9f9 !important;
    }
    .blocklyFlyoutBackground {
        fill: #e9f9f9  !important;
    }
    .blocklyTreeRoot {
        padding: 0 !important;
    }
	.blocklyToolboxDiv .blocklyTreeRoot [role="treeitem"] {
	    position: relative;
	}
	.blocklyToolboxDiv .blocklyTreeRoot [role="treeitem"]	.blocklyTreeRow {
/* 	    border-bottom: 1px solid #ffffff; */
/*         border-top: 1px solid #ffffff; */
	    line-height: normal !important;
	    padding: 6px 50px 6px 12px !important;
	}
	.blocklyTreeRow {
	    height: 30px !important;
	    line-height: 30px !important;
	}
	.blocklyTreeRow:hover {
	  background-color: #90e8e8 !important;
	}
	.blocklyTreeSelected {
	    background-color: #11c6c6 !important;
	}	
    .blocklyTreeSeparator {
	    background: none repeat scroll 0 0 #e9f9f9 !important;
	    border-bottom : none !important;
	    height: 10px !important;
	}
    .colors_category {
	    height: 100%;
	    left: 0;
	    position: absolute;
	    top: 0;
	    width: 8px;
    }
	 .color_cat_loops {
	   background-color : #5ba55b;
	 }
    .color_cat_logic, .color_cat_if, .color_cat_bool {
        background-color : #8ca6c0;
    }
    .color_cat_math {
        background-color : #8c95c0;
    }
    .color_cat_list {
        background-color : #9e8cc0;
    }
    .color_cat_variables {
        background-color : #c08ca6;
    }
    .color_cat_functions {
        background-color : #b88cc0;
    }
    .color_cat_color {
        background-color : #c09e8c;
    }
   .color_cat_text {
        background-color : #8cc0af;
    }
    .color_cat_arduino, .color_cat_arduino_in, .color_cat_arduino_out {
        background-color : #8c95c0;
    }
    .color_cat_arduino_servo {
        background-color : #8cb8c0;
    }
    